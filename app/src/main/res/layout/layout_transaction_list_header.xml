<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@color/bg_color">

    <include layout="@layout/layout_search"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="24dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/shape_list_item_bg">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white_color"
            android:textSize="15sp"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tag"
            android:text="地址"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="@color/c_999999"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textColor="@color/c_999999"
                android:textSize="14sp"
                android:text="余额"
                />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/white_color"
                android:textSize="14sp"
                android:text=""
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textColor="@color/c_999999"
                android:textSize="14sp"
                android:text="交易次数"
                />

            <TextView
                android:id="@+id/tv_deal_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/white_color"
                android:textSize="14sp"
                android:text=""
                />
        </RelativeLayout>

        <!--BTC转入总量-->
        <RelativeLayout
            android:id="@+id/layout_in"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textColor="@color/c_999999"
                android:textSize="14sp"
                android:text="转入总量"
                />

            <TextView
                android:id="@+id/tv_in"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/white_color"
                android:textSize="14sp"
                android:text=""
                />
        </RelativeLayout>

        <!--BTC转出总量-->
        <RelativeLayout
            android:id="@+id/layout_out"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:textColor="@color/c_999999"
                android:textSize="14sp"
                android:text="转出总量"
                />

            <TextView
                android:id="@+id/tv_out"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="@color/white_color"
                android:textSize="14sp"
                android:text=""
                />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white_color"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:text="交易列表"/>
</LinearLayout>
